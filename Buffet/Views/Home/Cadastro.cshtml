@model Buffet.ViewModels.CadastroViewModel

<!DOCTYPE html>
<html lang="pt" xmlns="http://www.w3.org/1999/xhtml"  >
    <head>
        <title>@ViewData["Title"] - Cadastro</title>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <!--=============================================================================================-->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous" />
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css" />
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/animsition@4.0.2/dist/css/animsition.min.css" />
        <!--===============================================================================================-->
        
    </head>
    <body>
        
       
    <div class="container-fluid corpo">
	    <div class="row justify-content-md-center h-100 p-5">
		    <div class="card-wrapper">
			    <div class="card fat">
				    <div class="card-body">

					    <h4 class="card-title">Cadastro</h4>
					    <form method="POST" class="my-login-validation" action="/Home/Cadastro">
						    
						     @if (Model.Erro != null)
                            	    {
                            		    <ul>
                            			    @foreach (var erro in Model.Erro)
                            			    {
                            				    <li> @erro</li>
                            			    }
                            			    
                            			    
                            		    </ul>
                            	    }

						    <div class="form-group">
							    <label for="email">E-mail</label>
							    <input id="email" type="text" class="form-control" name="email" value="">


						    </div>

						    @if (Model.Mensagem != null)
						    {
							    <p> @Model.Mensagem</p>
						    }

						    <div class="form-group">
							    <label for="password">Senha</label>
							    <input id="password" type="password" class="form-control" name="Senha" data-eye="" style="padding-right: 60px;">

						    </div>

						    <div class="form-group">
							    <label for="password">Confirma a senha</label>
							    <input id="confirmpassword" type="password" class="form-control" name="ConfirmarSenha" data-eye="" style="padding-right: 60px;">

						    </div>

						    <div class="form-group m-0">
							    <button type="submit" class="btn btn-primary btn-block">
								    Cadastrar
							    </button>
						    </div>
						    <div class="mt-4 text-center">
							    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Voltar</a>
						    </div>
					    </form>
				    </div>
			    </div>
			    <div class="footer text-center">
				    KDelicia 2021
			    </div>
		    </div>
	    </div>
    </div>
	

        <!--===============================================================================================-->
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" ></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>

        <!--===============================================================================================-->
        <script src="https://cdn.jsdelivr.net/npm/animsition@4.0.2/dist/js/animsition.min.js"></script>
        <!--===============================================================================================-->

    </body>
</html>